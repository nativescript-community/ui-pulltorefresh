{
  "name": "nativescript-akylas-pulltorefresh",
  "version": "2.3.1",
  "description": "A NativeScript plugin to provide the Pull to Refresh control on any view.",
  "main": "pulltorefresh",
  "typings": "index.d.ts",
  "nativescript": {
    "platforms": {
      "ios": "3.0.1",
      "android": "3.0.1"
    },
    "plugin": {
      "nan": "true",
      "pan": "true",
      "core3": "true",
      "category": "Interface"
    }
  },
  "scripts": {
    "ngc": "NODE_OPTIONS=--max_old_space_size=8192 ./node_modules/.bin/ngc --project tsconfig.aot.json",
    "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && cp README.md plugin && tsc -skipLibCheck",
    "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map ./plugin/**/*.metadata.json plugin/node_modules plugin/package-lock.json",
    "build": "npm run tsc && npm run ngc",
    "publish": "npm run build && lerna publish",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "**/*.{js, css, ts, json, scss, html, xml, md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nstudio/nativescript-pulltorefresh"
  },
  "keywords": [
    "NativeScript",
    "native",
    "script",
    "Pull Refresh",
    "SwipeRefreshLayout",
    "Material Design",
    "UIRefreshControl",
    "android",
    "ios",
    "bradmartin"
  ],
  "author": {
    "name": "Brad Martin",
    "email": "bradwaynemartin@gmail.com",
    "url": "https://github.com/bradmartin"
  },
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": "https://github.com/nstudio/nativescript-pulltorefresh/issues",
  "homepage": "https://github.com/nstudio/nativescript-pulltorefresh",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cpy-cli": "^3.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "nativescript-ui-listview": "~8.0.1",
    "rimraf": "^3.0.2",
    "@nativescript/core": "^6.4.1",
    "tns-platform-declarations": "^6.4.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "~3.8.2"
  }
}
