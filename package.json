{
  "name": "@akylas/nativescript-pulltorefresh",
  "version": "2.3.1",
  "description": "A NativeScript plugin to provide the Pull to Refresh control on any view.",
  "main": "pulltorefresh",
  "typings": "index.d.ts",
  "nativescript": {
    "platforms": {
      "ios": "3.0.1",
      "android": "3.0.1"
    },
    "plugin": {
      "nan": "true",
      "pan": "true",
      "core3": "true",
      "category": "Interface"
    }
  },
  "scripts": {
    "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && cp README.md plugin && tsc -skipLibCheck",
    "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map ./plugin/**/*.metadata.json plugin/node_modules plugin/package-lock.json",
    "build": "npm run tsc",
    "publish": "npm run build && lerna publish",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "**/*.{js, css, ts, json, scss, html, xml, md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Akylas/nativescript-pulltorefresh"
  },
  "keywords": [
    "NativeScript",
    "native",
    "script",
    "Pull Refresh",
    "SwipeRefreshLayout",
    "Material Design",
    "UIRefreshControl",
    "android",
    "ios",
    "bradmartin"
  ],
  "author": {
    "name": "Brad Martin",
    "email": "bradwaynemartin@gmail.com",
    "url": "https://github.com/bradmartin"
  },
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": "https://github.com/Akylas/nativescript-pulltorefresh/issues",
  "homepage": "https://github.com/Akylas/nativescript-pulltorefresh",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@nativescript/core": "7.0.0",
    "@nativescript/types-android": "7.0.2",
    "@nativescript/types-ios": "7.0.1",
    "@nativescript/webpack": "~3.0.2",
    "@types/node": "^10.12.21",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "cpy-cli": "3.1.1",
    "eslint": "7.8.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "npm-watch": "^0.7.0",
    "prompt": "^1.0.0",
    "rimraf": "^3.0.2",
    "ts-patch": "1.3.0",
    "typescript": "~3.9.7"
  }
}
